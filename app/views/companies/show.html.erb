<h1 class="page-header"><%= @company.name %></h1>

<h2>
  Departments
  <div class="pull-right">
    <%= link_to new_company_department_path(@company), class: 'btn btn-primary' do %>
      <%= glyphicon('plus') %>
      New Department
    <% end %>
  </div>
</h2>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Budget</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @company.departments) do |department| %>
        <td><%= department.name %></td>
        <td><%= department.budget %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>